<UserControl
    x:Class="MediaFinder_v2.Views.Executors.SelectWorkingDirectory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MediaFinder_v2.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MediaFinder_v2.Views.Executors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mde="clr-namespace:MaterialDesignExtensions.Controls;assembly=MaterialDesignExtensions"
    d:DataContext="{d:DesignInstance Type=local:SearchExecutorViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToStringConverter
            x:Key="BooleanToStringConverter"
            FalseValue="No"
            TrueValue="Yes" />
        <converters:StringsToContentConverter x:Key="ListToStringConverter" Delimeter="\n" />
        <materialDesign:BooleanToVisibilityConverter
            x:Key="BooleanToVisibilityConverter"
            FalseValue="Collapsed"
            TrueValue="Visible" />
        <materialDesign:BooleanToVisibilityConverter
            x:Key="BooleanToOppositeVisibilityConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Select a working directory and configuration for the search." />
            <mde:TextBoxOpenDirectory
                Margin="0,8,0,0"
                DialogHostName="DialogHost"
                Directory="{Binding WorkingDirectory, Mode=TwoWay}">
                <mde:TextBoxOpenDirectory.TextBoxStyle>
                    <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">
                        <Setter Property="materialDesign:HintAssist.Hint" Value="Choose a directory" />
                    </Style>
                </mde:TextBoxOpenDirectory.TextBoxStyle>
            </mde:TextBoxOpenDirectory>
        </StackPanel>
        <Border
            Grid.Row="1"
            Margin="0,8,0,0"
            HorizontalAlignment="Stretch"
            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="1"
            ClipToBounds="True"
            CornerRadius="8,8,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <materialDesign:ColorZone
                    CornerRadius="8,8,0,0"
                    Effect="{DynamicResource MaterialDesignShadowDepth5}"
                    Mode="PrimaryMid">
                    <TextBlock Margin="16" Text="Configurations" />
                </materialDesign:ColorZone>
                <DataGrid
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding Configurations}"
                    SelectedItem="{Binding SelectedConfig}"
                    SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id}" Header="ID" />
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                        <DataGridTextColumn
                            Binding="{Binding Description}"
                            CanUserSort="False"
                            Header="Description" />
                        <DataGridTextColumn
                            Binding="{Binding Recursive, Converter={StaticResource BooleanToStringConverter}}"
                            CanUserSort="False"
                            Header="Recursive" />
                        <DataGridTextColumn
                            Binding="{Binding ExtractArchives, Converter={StaticResource BooleanToStringConverter}}"
                            CanUserSort="False"
                            Header="Extract Archives" />
                        <DataGridTextColumn
                            Binding="{Binding PerformDeepAnalysis, Converter={StaticResource BooleanToStringConverter}}"
                            CanUserSort="False"
                            Header="Perform Deep Analysis" />
                        <DataGridTextColumn
                            Binding="{Binding Directories, Converter={StaticResource ListToStringConverter}}"
                            CanUserSort="False"
                            Header="Directories" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        <StackPanel
            Grid.Row="2"
            Margin="0,8,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,8,0"
                Command="{Binding PerformSearchCommand}"
                Visibility="{Binding SearchComplete, Converter={StaticResource BooleanToOppositeVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="15"
                        Height="15"
                        Margin="0,0,8,0"
                        Kind="RunFast" />
                    <TextBlock Text="Run" />
                </StackPanel>
            </Button>
            <Button Command="{Binding PerformSearchCancelCommand}" Visibility="{Binding SearchComplete, Converter={StaticResource BooleanToOppositeVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="15"
                        Height="15"
                        Margin="0,1,8,0"
                        Kind="Cancel" />
                    <TextBlock Text="Cancel" />
                </StackPanel>
            </Button>
            <Button
                Margin="0,0,8,0"
                Command="{Binding MoveToReviewCommand}"
                Visibility="{Binding SearchComplete, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="15"
                        Height="15"
                        Margin="0,0,8,0"
                        Kind="NavigateNext" />
                    <TextBlock Text="Next" />
                </StackPanel>
            </Button>
            <Button Command="{Binding FinishCommand}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="15"
                        Height="15"
                        Margin="0,2,8,0"
                        Kind="TickCircle" />
                    <TextBlock Text="Finish" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
