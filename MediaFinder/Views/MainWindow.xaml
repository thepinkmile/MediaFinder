<Window
    x:Class="MediaFinder_v2.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MediaFinder_v2.Controls"
    xmlns:converters="clr-namespace:MediaFinder_v2.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:executors="clr-namespace:MediaFinder_v2.Views.Executors"
    xmlns:local="clr-namespace:MediaFinder_v2.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Media Finder"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance Type=local:MainWindowsViewModel,
                                     IsDesignTimeCreatable=False}"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Style="{StaticResource MaterialDesignWindow}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Window.Resources>
        <Style
            x:Key="CircularProgressBar"
            BasedOn="{StaticResource MaterialDesignCircularProgressBar}"
            TargetType="{x:Type ProgressBar}">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkForegroundBrush}" />
        </Style>
        <converters:PercentageConverter x:Key="ProgressBarWidthConverter" Percentage="60" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <executors:SearchExecutor x:Name="Executor" Grid.Row="0" />
        <materialDesign:DialogHost
            x:Name="m_dialogHost"
            DialogTheme="Inherit"
            Identifier="DialogHost" />
        <materialDesign:Card
            Width="Auto"
            Height="Auto"
            Margin="15"
            Padding="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource PrimaryHueMidBrush}"
            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
            UniformCornerRadius="6"
            Visibility="{Binding ProgressBarVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <ProgressBar
                    VerticalAlignment="Center"
                    IsIndeterminate="True"
                    Style="{StaticResource CircularProgressBar}"
                    Value="0" />
                <TextBlock
                    MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ProgressBarWidthConverter}}"
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding ProgressBarStatus}"
                    TextWrapping="Wrap" />
            </StackPanel>
        </materialDesign:Card>
        <controls:ProgressOverlay
            CancelCommand="{Binding ProgressCancelCommand}"
            IsBusy="{Binding ProgressVisible}"
            Progress="{Binding ProgressValue}"
            StatusMessage="{Binding ProgressMessage}" />
        <materialDesign:Snackbar
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            MessageQueue="{Binding MessageQueue}" />
    </Grid>
</Window>
